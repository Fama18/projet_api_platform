{% extends 'accueil.html.twig' %}

{% block title %} Client Moral {% endblock %}

{% block ajout %}
    <div class="col-md-6 offset-md-3 mt-5">
        <div class="card">
            <h4 class="card-header text-center">Client Moral</h4>
            <div class="card-body">

                    {{ form_start(form) }}

                        <div class="form-group">
                        {{ form_label(form.nomentreprise)}}
                        {{ form_widget(form.nomentreprise)}}
                        </div>

                        <div class="form-group">
                        {{ form_label(form.adresseentreprise)}}
                        {{ form_widget(form.adresseentreprise)}}
                        </div>

                        <div class="form-group">
                        {{ form_label(form.raisonsocial)}}
                        {{ form_widget(form.raisonsocial)}}
                        </div>

                        <div class="form-group">
                        {{ form_label(form.numident)}}
                        {{ form_widget(form.numident)}}
                        </div>

                        <button class="btn btn-success col-md-4 offset-md-4">Envoyer</button>
                    {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}